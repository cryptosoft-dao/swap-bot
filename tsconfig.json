{
    "compilerOptions": {
        "target": "ES2021",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "outDir": "./dist",
        "baseUrl": "./src",
        "jsx": "react-jsx",
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "types": ["node"]
        }
    }
}
